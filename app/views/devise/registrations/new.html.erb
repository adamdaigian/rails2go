<div class="col-offset-3 col-sm-6">
<h2 class="text-center">Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="text-center"><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div class="text-center"><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div class="text-center"><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>
<div>
	<br>
<p class="text-center"><button type="button" class="btn btn-primary"><%= f.submit "Sign up" %></button></p>
<% end %>
</div>
<p class="text-center"><%= render "devise/shared/links" %></p>
</div>
</div>
